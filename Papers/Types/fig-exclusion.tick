\\%[-.2em]
\vspace*{-1ex}

\infrule
  {C \neq D \andalso A = \ancestors(`C[\S_bar\]`) \\
   \forall N \in \left(\bigcup_{M \in A} \myexcludes{M}\right). \quad \jcsub{`D[\T_bar\]`}{N}{\C_{N}}}
  {\jgconstrtemplate{`C[\S_bar\]`}{\excre}{`D[\T_bar\]`}{\bigvee \C_{N}}}

