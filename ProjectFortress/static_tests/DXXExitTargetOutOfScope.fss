component DXXExitTargetOutOfScope
export Executable

  (* An exit with an invalid target label should generate error. *)

  run(args:String...):() = do
  
    label outer
      label inner
        exit outer (* ok *)
      end inner
      exit inner (* outside label's scope *)
    end outer
    
  end

end