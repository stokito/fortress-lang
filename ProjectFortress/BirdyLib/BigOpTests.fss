  opr ::(l: List[\ZZ32\], x: ZZ32): List[\ZZ32\] = l.addRight(x)

  pl(l: List[\ZZ32\]): () =  
    if (hd,tl) <- l.extractLeft()
      then do print(" " || hd) ; pl(tl) end
      else println("")
    end

  pl(l: List[\List[\ZZ32\]\]): () =
    if (hd,tl) <- l.extractLeft()
      then do pl(hd) ; pl(tl) end
      else println("")
