  snd(x: ZZ32, y: ZZ32): ZZ32 = y
  sum(x: ZZ32, y: ZZ32): ZZ32 = x + y
  
  sum(x: (ZZ32,ZZ32), z: ZZ32): ZZ32 = sum(x) + z

