component LabelTest
export Executable

trait T
    m():()
end

topFunc():T =
    label quit
        object extends T
            m():() = exit quit
        end
    end quit

run(args:String...):() =
    try topFunc().m()
    catch e
        LabelException => println "Ok"
    end

end
