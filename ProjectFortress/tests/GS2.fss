export Executable

(* Test: Can a generic singleton capture a value at its instantiation? *)

counter:ZZ32 := 0

getCounter():ZZ32 = do
  counter += 1
  counter
end

object G[\T\]
   n = getCounter()
end

run(args:String...):()= do
   println(if G[\String\].n = G[\String\].n then "PASS" else "FAIL" end)
   println(if G[\String\].n = G[\ZZ32\].n then "FAIL" else "PASS" end)
   
   end

end
