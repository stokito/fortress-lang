component transactionalFork
export Executable

a: ZZ32[128,128] = matrix[\ZZ32,128,128\](0)

update(i:ZZ32) = do
   for j<-0#128 do
      a[i,j] := i j
   end
end   

run(args:String...):()=do
   for i<-0#128 do
      atomic do
         update(i)
      end
   end
end
end
