component Spawn4
export Executable

run(args:String...):()=do
   var x : ZZ32 = 0
   ft:Thread[\Any\] = Thread[\Any\](fn()=>do x:=1 end)
   ft.wait()
   assert(x=1, "Primitive thread didn't run")
   ft.stop()
end
end
