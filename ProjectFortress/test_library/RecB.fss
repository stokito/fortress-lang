component RecB
  import * from RecA
  export RecB

  trait Even
    getter anOdd(): Odd
  end

  even(x:ZZ32): Boolean =
    if x = 0 then true
    elif x > 0 then odd(x-1)
    elif x < 0 then odd(x+1)
    end

end
